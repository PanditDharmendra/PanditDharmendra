name: Update GitHub Stats

on:
  schedule:
    - cron: "0 * * * *"  # Runs every hour; change as needed
  workflow_dispatch: # Allows manual trigger

jobs:
  update-readme:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout repository
        uses: actions/checkout@v2

      - name: Update README with GitHub Stats
        run: |
          curl -X GET https://github-readme-stats.vercel.app/api?username=PanditDharmendra&show_icons=true&theme=radical -o README.md
          curl -X GET https://github-readme-stats.vercel.app/api/top-langs/?username=PanditDharmendra&layout=compact&theme=radical -o README.md
          curl -X GET https://github-readme-streak-stats.herokuapp.com/?user=PanditDharmendra&theme=radical -o README.md

      - name: Commit changes
        run: |
          git config --local user.email "your-email@example.com"
          git config --local user.name "your-username"
          git add README.md
          git commit -m "Update GitHub stats in README"
          git push
